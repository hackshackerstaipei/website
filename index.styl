@import vars
@import basic

html,body
  color: #444
  width: 100%
  height: 100%
  margin: 0
  padding: 0

#land-banner
  width: 100%
  height: 350px
  background: url(img/bk.jpg) top center #eee
  .row
    max-width: 1024px
    width: auto
    margin: auto
  .inner
    padding: 150px 0 0
  .banner
    width: 400px
    margin: 50px
  .state
    position: absolute
    display: inline
    top: 5px
    z-index: 10
    margin: 0 0 0 -32px
    .loader, i.fa
      position: absolute
      opacity: 0
    i
      display: inline-block
      font-size: 24px
  .loader
    width: 24px

  .follow i.fa
    font-size: 1.5em
    vertical-align: top
    margin-left: 10px
#subscribe .ok
  display: none
#subscribe.ok .ok
  display: inline-block
#subscribe.has-error
  input
    border-color: #f00
  i.fa.fa-close
    opacity: 1

#root
  max-width: 1024px
  margin: auto

#nav
  max-width: 800px
  margin: 20px auto
  background: none
  border: none
  .nav > li
    float: left

#footer
  margin-top: 100px
  border-top: 1px solid #ccc
  padding: 20px
  max-width:  1024px
  margin: auto

.grayed
  color: #999

@media(max-width: 768px)
  #land-banner
    .row
      margin: 0
      text-align: center
    img
      max-width: 80%
      margin: 5px 10%
      max-height: 203px
    .inner
      padding: 20px
  #nav .nav li span
    display: none
  #footer .pull-right
    display: none
  #root
    padding: 10px
@media(max-width: 440px)
  #land-banner img
    margin: 20px 10%

p
  margin: 20px

i.hh
  display: inline-block
  width: 12px
  height: 12px
  vertical-align: middle
  background: url(img/hh.svg) center center no-repeat
